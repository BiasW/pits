#!/bin/bash
cd /home/pi/pits/tracker
mkdir -p download/keep
echo Camera script ...

i=0
while [ 1 ]
do

	echo Taking photo for SSDV
	if [ -e take_pic ]
	then
		i=$[i+1]
		./take_pic ${i}
	fi

	echo sleeping ...
	sleep 15

	echo Taking photo for storage
	raspistill -w 2592 -h 1944 -v -t 1000 -ex auto -mm matrix -o keep/flight$1.jpg

	echo sleeping ...
	sleep 15
done
